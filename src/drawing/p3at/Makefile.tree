.SUFFIXES: .cpp

CC = g++
INCLUDE_DIR = ../../include
CFLAGS  = -Wall -I$(INCLUDE_DIR) `pkg-config --cflags opencv`
LDLIBS  = -lm `pkg-config --libs opencv`

SRCS    = draw_tree.cpp

OBJECTS = draw_tree.o

TARGET = draw_tree

CLEAN   = $(OBJECTS) $(TARGET)

$(TARGET): $(OBJECTS)
	$(CC) $(OBJECTS) -o $(TARGET) $(LDLIBS)

.cpp.o:
	$(CC) ${CFLAGS} -c $<

run: $(TARGET)
	$(TARGET)

clean:
	/bin/rm -f $(CLEAN)

